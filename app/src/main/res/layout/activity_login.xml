<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@drawable/bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <com.pansy.robot.view.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/edt_account"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="QQ号"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:background="@drawable/edit_background"
            />
        <EditText
            android:id="@+id/edt_pwd"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="密码"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:background="@drawable/edit_background"
            />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="登录服务器"
                />
            <Spinner
                android:id="@+id/spi_server_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/server_list"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            />
        <Button
            android:id="@+id/btn_scan"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="扫码"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_scan_background"
            />
        <Button
            android:id="@+id/btn_relogin"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="重登"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_relogin_background"
            />

    </LinearLayout>


</LinearLayout>